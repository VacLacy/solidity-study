
&НаКлиенте
Процедура ОбработкаКоманды(ПараметрКоманды, ПараметрыВыполненияКоманды)
	
	Перем ИсходныеДанные;
	
	ИсходныеДанные = "";
			
	
	// 1. Ввод данных
	
	ВвестиСтроку(ИсходныеДанные,"Что считать?");
	
	// 2. Разобрать данные на операторы операнды
	
	СтрокаОпераций = "+-/*";
	ПозицияОперации = 0;
	Для НомерОперации = 1 По СтрДлина(СтрокаОперации) Цикл
		
		ТекущаяОперация = Сред(СтрокаОпераций,НомерОперации,1);
		ПозицияОперации = Найти (ИсходныеДанные,ТекущаяОперация);
		Если ПозицияОперации = 0 Тогда 
			Продолжить;
		Иначе 
			Прервать;
		КонецЕсли;
			
	КонецЦикла;	
	
	Операнд1 = Число(Лев(ИсходныеДанные,ПозицияОперации - 1));
	Операнд2 = Число(Прав(ИсходныеДанные,ПозицияОперации + 1));
	
	// 3. Производим вычисление
	
	Если ТекущаяОперация = "+" Тогда
		Результат = Операнд1 + Операнд2;
	ИначеЕсли ТекущаяОперация = "-" Тогда
		Результат = Операнд1 - Операнд2;
	ИначеЕсли ТекущаяОперация = "*" Тогда
		Результат = Операнд1 * Операнд2;
	ИначеЕсли ТекущаяОперация = "/" Тогда
		Результат = Операнд1 / Операнд2;
		Попытка
			Результат = Операнд1/Операнд2;
		Исключение
			Результат = "На 0 делить нельзя";
		КонецПопытки;
	КонецЕсли;
		
	// 4. Организовать вывод результата
	
	Сообщить (ИсходныеДанные + " = " + Результат);
	
	
		
	
	
	
КонецПроцедуры                            
